<!DOCTYPE html>
<html>

	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<title>用户列表</title>
		<meta name="viewport" content="initial-scale=1, maximum-scale=1">
		<link rel="shortcut icon" href="/favicon.ico">
		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black">

		<link rel="stylesheet" href="//g.alicdn.com/sui-mobile/sm/0.5.0/css/sm.min.css">
		<link rel="stylesheet" href="//g.alicdn.com/sui-mobile/sm/0.5.0/css/sm-extend.min.css">

		<link rel="stylesheet" href="/stylesheets/base.css">
		<link rel="stylesheet" href="/stylesheets/userInfo.css">
	</head>

	<body>
    <div class="page-group" user-id=<%= JSON.stringify(user) %>>
      <div class="page page-current" id="detailPage">
        <header class="bar bar-nav">
          <a class="icon icon-left pull-left user-detail-back"></a>
          <h1 class='title js-detail-title'>用户信息修改</h1>
        </header>
        <div class="content">
          <div class="list-block inset">
            <ul>
              <li class="item-content  item-link js-item-uname">
                <div class="item-inner">
                  <div class="item-title">用户名</div>
                  <div class="item-after js-show-uName"><%= user.userName %></div>
                </div>
              </li>
              <li class="item-content  item-link js-item-uSex">
                <div class="item-inner">
                  <div class="item-title">性&nbsp;别</div>
                  <div class="item-after">
                    <input type="text" class="js-show-uSex" value=<%= gender %> data-old=<%= user.gender %> />
                  </div>
                </div>
              </li>
              <li class="item-content item-link js-item-uBirthday">
                <div class="item-inner">
                  <div class="item-title">生&nbsp;日</div>
                  <div class="item-after ">
                    <input type="text" class="js-show-uBirthday" value=<%= user.birthday %> data-old=<%= user.birthday %> />
                  </div>
                </div>
              </li>
              <li class="item-content item-link js-item-uAddress">
                <div class="item-inner">
                  <div class="item-title">地&nbsp;址</div>
                  <div class="item-after ">
                    <input type="text" class="js-show-uBirthday1" data-toggle='date' value=<%= user.birthday %>  />
                  </div>
                </div>
              </li>
              <li class="item-content js-item-age">
                <div class="item-inner">
                  <div class="item-title">年&nbsp;龄</div>
                  <div class="item-after">
                    <input type="text" class="js-show-uAge" disabled="disabled" value=<%= age %> >
                  </div>
                </div>
              </li>
            </ul>
            <div class="content-block">
              <div class="row">
                <div class="col-100"><a href="#" class="button button-big button-fill button-danger user-detail-edit hide">保存</a></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="page" id="unamePage">
        <header class="bar bar-nav">
          <a class="icon icon-left pull-left user-uname-back back"></a>
          <h1 class='title'>用户名</h1>
        </header>
        <div class="content">
          <div class="list-block inset">
            <ul>
              <li>
                <div class="item-content">
                  <div class="item-inner">
                    <div class="item-input">
                      <input type="text" id="uname-change" value=<%= user.userName %> data-uid=<%= user._id %> >
                    </div>
                  </div>
                </div>
              </li>
            </ul>
            <div class="content-block">
              <div class="row">
                <div class="col-100"><a href="#" class="button button-big button-fill button-danger" id="bt-edit-uname">保存</a></div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

		<script type='text/javascript' src='//g.alicdn.com/sj/lib/zepto/zepto.min.js' charset='utf-8'></script>
		<script type='text/javascript' src='//g.alicdn.com/sui-mobile/sm/0.5.0/js/sm.min.js' charset='utf-8'></script>
		<script type='text/javascript' src='//g.alicdn.com/sui-mobile/sm/0.5.0/js/sm-extend.min.js' charset='utf-8'></script>
		<script src="//libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
		<script src="/javascripts/util.js"></script>
		<script src="/javascripts/userInfo.js"></script>
	</body>

</html>
